<%= provide(:title, "Sign up") %>

<div class="container">
  <div class="formbox span6 offset3">
    <h3>Create an Account</h3>
    <br></br>

    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <div><%= f.submit "Create my account", class: "btn btn-small" %></div>
    <% end %>
  </div>
</div>