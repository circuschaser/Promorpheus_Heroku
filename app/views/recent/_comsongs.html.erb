<div class="recent_com">

	<% sorted = [] %>
	<% tracks = Track.all %>

	<% tracks.each do |t| %>
		<% sorted.push(t) %>
	<% end %>

	<% sorted.sort! {|x,y| y.created_at <=> x.created_at } %>

	<h5>RECENT POPULAR SONGS</h5>
	<% sorted[0..7].uniq { |p| p.tracked_id }.each do |x| %>
		<ul>
			<li>
				<%= link_to "#{truncate(x.tracked.title, length: 39, separator: ' ')}", 
						"#{songs_path}" + "?utf8=âœ“&search=" + "#{x.tracked.title}" %>				
				appears in 
				<span class="green">
					<%= pluralize(x.tracked.setlists.uniq.count, "SETLIST").upcase %>
				</span>
			</li>
		</ul>
	<% end %>

</div>
