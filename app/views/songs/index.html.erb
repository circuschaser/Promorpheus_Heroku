<% provide(:title, "Music") %>

<div class="notice_nobr">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert-temp alert fade in alert-#{key}") %>
  <% end %>
</div>

<div id="content_main">

  <div id="addbutton">
    <%= link_to "NEW SONG", new_song_path, id: 'addtrack', :class => 'btn-small btn-small-grn' %>
  </div>

  <div class="songlist_title">
    <div class="mainlink">
      <h4><%= link_to "ALL MUSIC", songs_path %></h4>
    </div>
  </div>

  <div class="tanwrap_top">
  </div>

  <div class="tanwrap">

    <div class="content_head">

      <div class='pagination'>
        <%= will_paginate @songs %>
      </div>
    </div>     
    
    <div class="content_body">

      <%= render "songs/list" %>

    </div>

  </div>
</div>

<div id="sidebar">
  <%= render "sidebar/side_songs" %>
</div>