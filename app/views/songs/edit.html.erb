  <div id="content_main">
    <div class="tanwrap_form">
      <div class="content_head">
        <h3>EDIT SONG INFO</h3>
      </div>

      <div class="content_form">
        <div id="editsong">
            <% @song = Song.find(params[:id]) %>
            <%= simple_form_for @song do |f| %>
            <%= render 'shared/error_messages', object: f.object %>

            <div id="title">
                <div id="title_input">
                <%= f.input :title %>
                </div>
            </div>

            <div id="editcomposer">
                <div id="editcomposer_from_list">
                    <%= f.input :composer_name, label: "Composer" %>
                </div>
            </div>

            <div id="editalbum">
                <div id="editalbum_from_list">
                    <%= f.input :album_name, label: "Album" %>
                </div>
            </div>

            <div id="editgenre">
                <div id="editgenre_from_list">
                    <%= f.input :genre_name, label: "Genre" %>
                </div>
            </div>

            <!-- TAGS                            -->
            <div class="field">
                <%= f.input :tag_list, label: "Tags (separate by commas)" %>
            </div>

            <!-- SUBMIT                            -->
            
            <div><%= f.button :submit, "SAVE CHANGES" %></div>
            <% end %>
        </div>
      </div>
      
    </div>
  </div>
